<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/dcvsradioappbg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioPlayBTN"
        android:background="@drawable/dcvsradioplay"
        android:contentDescription="@string/NACRadioPlayDESC"
        android:layout_marginStart="435dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioPauseBTN"
        android:contentDescription="@string/NACRadioPauseDESC"
        android:background="@drawable/dcvsradiopause"
        android:layout_marginStart="182dp"
        android:layout_alignTop="@+id/radioPlayBTN"
        android:layout_toEndOf="@+id/radioPlayBTN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/NACRadioPlayDESC"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_below="@+id/radioPlayBTN"
        android:layout_alignEnd="@+id/radioPlayBTN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/NACRadioPauseDESC"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:layout_below="@+id/radioPauseBTN"
        android:layout_alignEnd="@+id/radioPauseBTN" />

</RelativeLayout>
